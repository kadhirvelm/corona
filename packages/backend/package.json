{
  "name": "@corona/backend",
  "version": "0.1.0",
  "description": "The backend to a corona dashboard",
  "main": "dist/index.js",
  "repository": "https://github.com/kadhirvelm/corona",
  "license": "MIT",
  "private": false,
  "type": "module",
  "dependencies": {
    "@corona/api": "^0.1.0",
    "@corona/pipeline": "^0.1.0",
    "@corona/utils": "^0.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lru-cache": "^5.1.1"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node --experimental-modules --es-module-specifier-resolution=node dist/index.js",
    "start:watch": "nodemon --experimental-modules --es-module-specifier-resolution=node dist/index.js --watch . --watch ../api/* --watch ../utils/* --watch ../pipelines/*",
    "start:production": "sudo pm2 start dist/index.js --name 'corona-service' --node-args='--experimental-modules --es-module-specifier-resolution=node'",
    "watch:all": "yarn build:watch & yarn start:watch",
    "dev": "yarn build && yarn watch:all",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^12.12.31",
    "nodemon": "^2.0.2",
    "pm2": "^4.2.3",
    "typescript": "^3.8.3"
  }
}